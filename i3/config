bindsym $mod+0 workspace $ws-10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws-comms; workspace $ws-comms; 
bindsym $mod+Shift+2 move container to workspace $ws-chrome; workspace $ws-chrome;  
bindsym $mod+Shift+3 move container to workspace $ws-code; workspace $ws-code;  
bindsym $mod+Shift+4 move container to workspace $ws-term; workspace $ws-term;  
bindsym $mod+Shift+5 move container to workspace $ws-media; workspace $ws-media;  
