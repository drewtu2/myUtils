set $mod Mod4

set $i3-config-home $MYUTILS_HOME/i3
set $i3-display-swap-cmd $MYUTILS_HOME/i3/i3-display-swap.sh
set $i3-status-config $MYUTILS_HOME/i3/i3-status.conf
set $lockscreen-cmd $MYUTILS_HOME/i3/i3lock-blur.sh
set $dunst-config $MYUTILS_HOME/i3/config_dunst

set $audio-select-cmd $MYUTILS_HOME/scripts/rofi/rofi_audio_selector.py
set $screenshot-cmd $MYUTILS_HOME/scripts/screen-2-clipboard.sh
set $edit-screenshot-cmd flameshot gui

set $teams-url teams.microsoft.com
set $outlook-url https://outlook.office365.com/mail/

set $picom-config ~/.config/picom/picom.conf
set $bg-image /usr/share/backgrounds/hardy_wallpaper_uhd.png

set $laptop eDP-1
set $dellc33 DP-2

##################################################################################################
# Monitor configurations 
##################################################################################################
# Set the default resolution for the laptop screen.
exec xrandr --output $laptop --mode 1920x1200 --auto 
# Set the wide screen monitor to the right of the laptop.
exec xrandr --output $dellc33 --mode 3440x1440 --auto --right-of $laptop --primary

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans Mono 8

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status --config $i3-status-config
    position top
    tray_output $dellc33 
    tray_output $laptop
    tray_padding 5 
    font pango:DejaVu Sans Mono 10
}

##################################################################################################
# Startup
##################################################################################################

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- $lockscreen-cmd 

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Pulse Audio Controller from the tray
exec --no-startup-id pasystray

# Bluetooth manager
exec --no-startup-id blueman-applet 

# Clipboard manager
exec --no-startup-id copyq 

# Set a nice background
exec_always feh --bg-fill --no-fehbg $bg-image

# Start the audio controls. make sure we unmute at start.
# exec --no-startup-id pulseaudio --start; sleep 10; pamixer -u

# Start picom (compositor)
exec --no-startup-id picom --config $picom-config

# Startup full apps channels.
exec --no-startup-id code 
exec --no-startup-id discord 
exec --no-startup-id google-chrome --new-window $teams-url
exec --no-startup-id google-chrome --new-window $outlook-url
exec --no-startup-id slack
exec --no-startup-id spotify

# Notifications
exec killall -q notify-osd
exec --no-startup-id dunst -config ~/.i3/config_dunst


