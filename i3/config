bindsym $mod+2 workspace $ws-chrome
bindsym $mod+3 workspace $ws-code
bindsym $mod+4 workspace $ws-term
bindsym $mod+5 workspace $ws-media
bindsym $mod+6 workspace $ws-teams
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
